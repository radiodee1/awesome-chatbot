<aiml version="1.0.1" encoding="UTF-8">
<!-- basic_chat.aiml -->

    <category>
        <pattern>WHAT ARE YOU</pattern>
        <template>
            I'm a bot, silly!
        </template>
    </category>
    <category>
        <pattern>TELL ME ABOUT *</pattern>
        <template>
            http://find <star/>.
        </template>
    </category>
    <category>
        <pattern>LETS TALK ABOUT *</pattern>
        <template>
            http://find <star/>.
        </template>
    </category>

    <!-- candy questions start here... -->
    <category>
        <pattern> WHAT CANDY DO YOU LIKE </pattern>
        <template>
            chocolate is my favorite candy.
        </template>
    </category>
    <category>
        <pattern> DO YOU LIKE CANDY </pattern>
        <template>
            chocolate is my favorite candy.
        </template>
    </category>

    <!-- start name discussion -->
    <!-- record name if mentioned -->
    <category>
      <pattern>I AM *</pattern>
      <template>
         Hello <set name = "username"><star/></set>
      </template>
   </category>

   <category>
      <pattern>WHO AM I</pattern>
      <template>
         your name is <get name = "username"/>
      </template>
   </category>
    <!-- end name discussion -->
</aiml>
